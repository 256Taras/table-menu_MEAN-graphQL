{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nrwl/nx"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:backend-api",
                "onlyDependOnLibsWithTags": [
                  "scope:backend-api",
                  "type:lib",
                  "scope:shared"
                ]
              },
              {
                "sourceTag": "scope:fronend-client",
                "onlyDependOnLibsWithTags": [
                  "scope:fronend-client",
                  "type:lib"
                ]
              },
              {
                "sourceTag": "scope:fronend-admin",
                "onlyDependOnLibsWithTags": [
                  "scope:fronend-admin"
                ]
              },
              {
                "sourceTag": "lib-type:feature",
                "onlyDependOnLibsWithTags": [
                  "lib-type:data-access",
                  "lib-type:utils",
                  "lib-type:feature",
                  "lib-type:ui"
                ]
              },
              {
                "sourceTag": "lib-type:ui",
                "onlyDependOnLibsWithTags": [
                  "lib-type:ui",
                  "lib-type:utils"
                ]
              },
              {
                "sourceTag": "lib-type:utils",
                "onlyDependOnLibsWithTags": [
                  "lib-type:ui"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nrwl/nx/javascript"
      ],
      "rules": {}
    }
  ]
}
